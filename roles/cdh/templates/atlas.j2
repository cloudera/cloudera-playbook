{
  "refName": "ATLAS-1",
  "serviceType": "ATLAS",
  "serviceConfigs": [
      {
          "name" : "kerberos.auth.enable",
          "value" : "{% if (krb5_kdc_type is defined) and (krb5_kdc_type != 'none') %}true{% else %}false{% endif %}"
        }
  ],
  "roleConfigGroups": [
    {
      "refName": "ATLAS-1-GATEWAY-BASE",
      "roleType": "GATEWAY",
      "base": true
    },
    {
      "refName": "ATLAS-1-ATLAS_SERVER-BASE",
      "roleType": "ATLAS_SERVER",
      "base": true,
      "configs": [
          {
            "name" : "atlas_authentication_method_file",
            "value" : "true"
          },
          {
            "name" : "atlas_admin_password",
            "value" : "{{ atlas_atlas_admin_password }}"
          },
          {
            "name" : "atlas_admin_username",
            "value" : "{{ atlas_atlas_admin_username }}"
          }
      ] 
    }
  ]
}
