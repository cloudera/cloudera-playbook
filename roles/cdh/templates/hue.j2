{
  "refName": "HUE-1",
  "serviceType": "HUE",
  "serviceConfigs": [
    {
      "name": "database_host",
      "value": "{{ hostvars[db_hostname]['inventory_hostname'] }}"
    }, {
      "name": "database_type",
      "value": "{{ databases.hue.type }}"
    }, {
      "name": "database_name",
      "value": "{{ databases.hue.name }}"
    }, {
      "name": "database_user",
      "value": "{{ databases.hue.user }}"
    }, {
      "name": "database_password",
      "value": "{{ databases.hue.pass }}"
    }, {
      "name": "oozie_service",
      "ref": "OOZIE-1"
    }, {
      "name": "impala_service",
      "ref": "IMPALA-1"
    }, {
      "name": "hive_service",
      "ref": "HIVE-1"
    }, {% if ( cluster_version_cdh_major|int == 5 ) or ( cluster_version_cdh_major|int == 6 ) %} {
      "name": "sentry_service",
      "ref": "SENTRY-1"
    }, {% endif %} {
      "name": "hue_service_safety_valve",
      "value": "[impala]\nserver_port=21051\n\n[beeswax]\ndownload_cell_limit=10"
    }, {
      "name": "zookeeper_service",
      "ref": "ZOOKEEPER-1"
    }, {
      "name": "hue_webhdfs",
      "ref": "HDFS-HTTPFS-1"
    }
  ],
  "roleConfigGroups": [
    {
      "refName": "HUE-1-HUE_SERVER-BASE",
      "roleType": "HUE_SERVER",
      "configs": [],
      "base": true
    }, {
      "refName": "HUE-1-HUE_LOAD_BALANCER-BASE",
      "roleType": "HUE_LOAD_BALANCER",
      "configs": [],
      "base": true
    }
    {% if (krb5_kdc_type is defined) and (krb5_kdc_type != 'none') %}
     , {
      "refName": "HUE-1-KT_RENEWER-BASE",
      "roleType": "KT_RENEWER",
      "configs": [],
      "base": true
    }
    {% endif %}
  ]
}
